<Window x:Class="ip_check.MainWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:ip_check"  
        mc:Ignorable="d"  
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <DataGrid Name="connectionsData" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP" Binding="{Binding [IP]}" />
                <DataGridTextColumn Header="ConnType" Binding="{Binding [ConnType]}" />
                <DataGridTextColumn Header="Process" Binding="{Binding [Process]}" />
                <DataGridTextColumn Header="ProcLocation" Binding="{Binding [ProcLocation]}" />
                <DataGridTextColumn Header="Malicious" Binding="{Binding [Malicious]}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>  
</Window>
